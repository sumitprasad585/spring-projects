<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="helloBean" class="com.sumit.beans.HelloBean" scope="thread"/>
	<bean id="threadScope" class="com.sumit.scopes.ThreadScope"/>
	<bean id="scopeConfigurer" class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<property name="scopes">
			<map>
				<entry key="thread" value-ref="threadScope" />
			</map>
		</property>
	</bean>

</beans>